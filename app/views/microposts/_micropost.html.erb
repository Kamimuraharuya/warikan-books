<li id="<%= micropost.id %>">
	<%= link_to gravatar_for(micropost.user, size: 50), micropost.user %>
	<span class="user"><%= link_to micropost.user.name, micropost.user %></span>
	<span>
		<div><%= micropost.bookname %></div>
		<div><%= micropost.area %></div>
		<div><%= micropost.bookprice %></div>
		<div><%= micropost.day %></div>
		<div><%= micropost.kakikomi %></div>
		
		<div><%= micropost.content if micropost.content? %></div>


		<% if logged_in? %>
		<% if micropost.like_user(current_user.id) %>
		<span>
			参加しています！
		</span>
		<span>
			<%= micropost.likes_count %>
		</span>

		<% else %>


		<%= button_to micropost_likes_path(micropost), id: "like-button" do %>
		<%= "参加する" %>
		<span>
			<%= micropost.likes_count %>
		</span>
		<% end %>
		<% end %>
		<% else %>
		<%= image_tag("icon_heart.svg") %>
		<span>
			<%= micropost.likes_count %>
		</span>
		<% end %>
		<h><%= image_tag micropost.picture.url if micropost.picture? %></h>
	</span>
	<span class="timestamp">
		Posted <%= time_ago_in_words(micropost.created_at) %> ago.
		<% if current_user?(micropost.user) %>
		<%= link_to "delete", micropost, method: :delete,
		data: { confirm: "You sure?" } %>


		<% end %>
	</span>

</li>