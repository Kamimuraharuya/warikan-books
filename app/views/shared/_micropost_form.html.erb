<%= form_for(@micropost, html: { multipart: true }) do |f| %>

<div class="row">
	<aside class="col-md-4">
		<%= render 'shared/error_messages', object: f.object %>
		<%# エラーメセ出すのと、クリックしても吐蕃ようにする %>

		<h>
			本の名前
		</h>
		<%= f.text_field :bookname, class: 'form-control' %></div>
		<h>
			本の写真（任意）
		</h>
		<span class="picture">
			<%= f.file_field :picture,accept: 'image/jpeg,image/gif,image/png'  %>
		</span>
		<h>
			場所、大学名
		</h>
		<div><%= f.text_field :area, size: 20, maxlength:30, class: 'form-control' %></div>
		<h>
			ワリカン人数（半角）
		</h>
		<div><%= f.number_field :person_number, min: 2, max: 5 %></div>
		<h>
			購入金額（半角）
		</h>
		<div><%= f.number_field :bookprice, min: 100, max: 9999 %></div>
		<h>
			一人当たりの読書日数(半角)
		</h>
		<div><%= f.number_field :day, min: 1, max: 30 %></div>

		<h>
			書き込み、ライン引き
		</h>
		<%= f.select :kakikomi, ["なし","ライン","メモあり","テーマ付き書き込み"], {include_blank: "選択してください"} %>
	</div>

	<div class="field">
		<h>本の状態、書き込みテーマなど（任意）</h>
		<%= f.text_area :content, placeholder: "テーマ、本の状態など" %>
	</div>
	<%= f.submit "Post", class: "btn btn-primary", data: { confirm: "You sure?" }  %>
</aside>
</div>
<% end %>

<script type="text/javascript">
	$('#micropost_picture').bind('change', function() {
		var size_in_megabytes = this.files[0].size/1024/1024;
		if (size_in_megabytes > 5) {
			alert('Maximum file size is 5MB. Please choose a smaller file.');
		}
	});
</script>