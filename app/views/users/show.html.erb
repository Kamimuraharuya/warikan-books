<% if logged_in? %>
<%= link_to "ユーザーを削除", @user, method: :delete,
      data: { confirm: "You sure?" }, class: "btn btn-danger"  if current_user.id == 2 %>
      <% end %> 
<h1>
  <%= image_tag @user.image.url%>
  <%= @user.name %>
</h1>
<div>
  <table class="table" >
    <tr>
      <td>大学・学部・専攻・学年</td>
      <td><%= @user.university %>  <%= @user.major %></td>
    </tr>
    <tr>
      <td>人生の一冊</td>
      <td><%= @user.favorite_book %></td>
    </tr>
    <tr>
      <td>プロフィール、読書遍歴</td>
      <td><%= @user.content %></td>
    </tr>
  </table>
  <div><%= link_to "プロフィール設定", edit_user_path(@user),  class: "btn btn-primary" if current_user?(@user)%></div>


  <br>
  <br>
  <h1>これまで参加、立ち上げた企画</h1>　
  
  <% if @microposts.any? %>
  <h3>企画(<%= @microposts.count %>)</h3>
  <ol class="microposts">
    <%= render @microposts %>
  </ol>
  <%= will_paginate @microposts %>
  <% end %>
