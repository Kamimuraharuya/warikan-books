<li>
	<%= image_tag current_user.image.url %>
	<%= link_to current_user.name, user %>
	<h><%= current_user.university %></h>
	<h><%= current_user.major %></h>
	<h><%= current_user.favorite_book %></h>
	<li><%= link_to "プロフィール", current_user %></li>
	<li><%= link_to "プロフィール設定", edit_user_path(user) if current_user?(user)%></li>
